<h1>Your Cart</h1>

<% if @cart.products.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @cart.products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.category %></td>
          <td><%= number_to_currency(product.price) %></td>
          <td>
            <%= link_to "Remove", remove_from_cart_path(product), method: :delete, data: { confirm: "Are you sure you want to remove #{product.name} from your cart?" }, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "Checkout", checkout_path, class: "btn btn-primary" %>
<% else %>
  <p>Your cart is empty.</p>
<% end %>

<%= link_to "Back to Products", products_path, class: "btn btn-secondary" %>
