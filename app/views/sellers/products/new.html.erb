<div class="container">
  <h1>New Product</h1>

  <%= form_with(model: @product, url: sellers_products_path, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :category %>
      <%= form.select :category, Product.categories.keys.map { |c| [c.titleize, c] }, {}, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :price %>
      <%= form.number_field :price, class: "form-control" %>
    </div>

    <%= form.submit "Create Product", class: "btn btn-primary" %>
    <%= link_to "Cancel", sellers_products_path, class: "btn btn-secondary" %>
  <% end %>
</div>
